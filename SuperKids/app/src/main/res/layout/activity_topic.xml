<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/bg1"
    android:weightSum="2"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:paddingBottom="10dp"
        android:layout_weight="1">
        <Button
            android:id="@+id/btnChar"
            android:layout_width="160dp"
            android:layout_height="90dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bhc"/>
        <Button
            android:id="@+id/btnNumber"
            android:layout_width="160dp"
            android:layout_height="90dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/bhs"/>
        <Button
            android:id="@+id/btnColor"
            android:layout_width="160dp"
            android:layout_height="90dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/bhms"/>

    </LinearLayout>
    <LinearLayout

        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:paddingBottom="10dp"
        android:layout_weight="1">
        <Button
            android:id="@+id/btnShaep"
            android:layout_width="175dp"
            android:layout_height="90dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bhhk"/>
        <Button
            android:id="@+id/btnAP"
            android:layout_width="160dp"
            android:layout_height="90dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/bhs"/>
        <Button
            android:id="@+id/btnPractive"
            android:layout_width="160dp"
            android:layout_height="90dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/blt"/>
    </LinearLayout>




</LinearLayout>